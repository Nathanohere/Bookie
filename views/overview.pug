            .row.gap
                each book in books
                    .col-3.pads
                        .blog-card
                            .card-image
                                img.img-fluid(src=`/img/books/${book.thumbnailUrl}`, alt=`${book.title}`)
                            .container
                                span.a-size
                                    .title=book.title
